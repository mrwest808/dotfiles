// Place your settings in this file to overwrite the default settings
{
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "breadcrumbs.enabled": true,
  "css.validate": false,
  "editor.fontFamily": "SF Mono, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 15,
  "editor.fontWeight": "600",
  "editor.formatOnSave": true,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": true,
  "editor.rulers": [80],
  "editor.tabSize": 2,
  "files.associations": {
    "*.twig": "php",
    "*.mdx": "mdx",
    ".stylelintrc": "json",
    "*.svelte": "svelte",
    "*.pcss": "css",
    "*.ts": "typescript"
  },
  "files.exclude": {
    "**/node_modules": true
  },
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "html.autoClosingTags": false,
  "javascript.autoClosingTags": false,
  "liveshare.anonymousGuestApproval": "reject",
  "liveshare.authenticationProvider": "Microsoft",
  "liveshare.autoShareServers": false,
  "liveshare.autoShareTerminals": false,
  "liveshare.connectionMode": "direct",
  "liveshare.guestApprovalRequired": true,
  "liveshare.presence": true,
  "svelte.plugin.typescript.diagnostics.enable": false,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeight": "600",
  "typescript.autoClosingTags": false,
  "typescript.locale": "en",
  "typescript.tsserver.useSeparateSyntaxServer": false,
  "vim.easymotion": true,
  "vim.leader": ",",
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<C-u>"
      ],
      "after": [],
      "commands": [
        {
          "command": "deleteAllLeft",
          "args": []
        }
      ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<C-u>"
      ],
      "after": [
        "5",
        "<C-y>"
      ]
    },
    {
      "before": [
        "<C-d>"
      ],
      "after": [
        "5",
        "<C-e>"
      ]
    },
    {
      "before": [
        "leader",
        "t",
        "f"
      ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.focusSideBar",
          "args": []
        }
      ]
    },
    {
      "before": [
        "leader",
        "t",
        "o"
      ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.toggleSidebarVisibility",
          "args": []
        }
      ]
    }
  ],
  "workbench.colorTheme": "Oceanic Next Italic",
  "workbench.editor.openSideBySideDirection": "down",
  "workbench.fontAliasing": "auto",
  "workbench.sideBar.location": "right",
}
